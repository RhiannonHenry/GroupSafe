<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
         >

        <TextView
            android:id="@+id/detailedContactPageMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin_top"
            android:gravity="center"
            android:text="@string/detailedContactPageMessage"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/detailedContactNamePrompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactPageMessage"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:text="@string/detailed_contact_contact_name_prompt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailedContactName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactNamePrompt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/detailedContactNumberPrompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactName"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:text="@string/detailed_contact_contact_number_prompt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailedContactNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactNumberPrompt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/detailedContactGroupLeaderPrompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactNumber"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:text="@string/detailed_contact_group_leader_prompt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailedContactGroupLeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactGroupLeaderPrompt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/detailedContactGroupMemberPrompt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactGroupLeader"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:text="@string/detailed_contact_group_member_prompt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailedContactGroupMember"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detailedContactGroupMemberPrompt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/small_margin_top"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/detailedContactOKButton"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailedContactPageMessage"
            android:layout_below="@+id/detailedContactGroupMember"
            android:layout_marginTop="15dp"
            android:onClick="OK"
            android:text="@string/OK" />

        <Button
            android:id="@+id/detailedContactDeleteButton"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/detailedContactOKButton"
            android:layout_alignBottom="@+id/detailedContactOKButton"
            android:layout_alignRight="@+id/detailedContactGroupMember"
            android:layout_marginRight="14dp"
            android:onClick="delete"
            android:text="@string/delete" />
    </RelativeLayout>

</ScrollView>